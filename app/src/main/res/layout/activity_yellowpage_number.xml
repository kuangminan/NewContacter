<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <ImageView
            android:id="@+id/img_user_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/icon_min_head"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/img_user_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/img_contact_default"
            android:layout_alignBottom="@id/img_user_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-35dp"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="xxx"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <com.future.wk.newcontacter.widget.xrecyclerview.XRecyclerView
        android:id="@+id/numberlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>